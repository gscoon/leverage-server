doctype html
html(lang="en")
	head
		
		//indicate that our site is mobile optimized
		meta(name='viewport', content='width=device-width, initial-scale=1.0')

		script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js')
		script(src='//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.2.0/js/bootstrap.min.js')
		link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.2.0/css/bootstrap-theme.min.css')
		link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.2.0/css/bootstrap.min.css')

		script(src="https://cdn.socket.io/socket.io-1.4.5.js")
		script(type='text/javascript', src='/js/site.js')
		script(type='text/javascript', src='/js/menu.js')
		//- script(type='text/javascript', src='/js/box.js')
		script(type='text/javascript', src='/js/util.js')
		script.
			var poxUser = !{JSON.stringify(user).replace(/<\//g, "<\\/")};
			var poxDomain = !{JSON.stringify(domain).replace(/<\//g, "<\\/")};
		script(type='text/javascript', src='/js/jPulse.js')
		
		link(rel="stylesheet", href="/css/style.css")
		link(rel="stylesheet", href="/css/menu.css")
		link(rel="icon", type="image/png", href="/images/favicons/spot-32.png")
		title ChickenPox - Discuss what matters to you
	body
		include fb-sdk
		div#top
			div#logo
				img(src="/images/logo.gif")
			a#main_login_button.login_button
			div#user_section
				div#user_image
					img
				a#user_name(href=domain.feed)
				div#user_menu
					a#user_menu_feed(href=domain.feed) My Feed
					a#user_menu_logout Log Out
		div#main_intro
			div#tag_line
				h1 Discuss what matters with who matters most
			div#search
				div#search_loader
				div#url-input-outer
					input#url-input(type="text", placeholder="Copy and paste a URL")
		div#book
			div.story.container
				div.col-md-6
					h3.story_title Read Quality Commentary
					p.story_description You want to read quality commentary, but nonsense and spam is what you find at the bottom of the page instead
				div.col-md-6
					img.img-responsive(src="images/screenshots/discussion.png")
			div.story.container
				div.col-md-6
					h3.story_title Tag any point
					p.story_description You want to comment on a particular statement, image, or point in a video, but can only comment on the entire page, if at all.
				div.col-md-6
					img.img-responsive(src="images/screenshots/anywhere.png")
			div.story.container
				div.col-md-6
					h3.story_title Avoid the trolls
					p.story_description You want to comment on interesting content, but don't want a conversation with the world, just the people you care about. 
				div.col-md-6
					img.img-responsive(src="images/screenshots/community.png")
			div.story.container
				div.col-md-6
					h3.story_title Sharing is Easy
					p.story_description Share with your Facebook friends or send a link to your coworkers
				div.col-md-6
					img.img-responsive(src="images/screenshots/share.png")

				
			
			
		div#spot_holder
		div#pox_selection_menu
			div#selection_description Select a point on the page to tag
			img#image_overlay
			div#selection_overlay
		include login_menu_inc.jade
		include ../public/tag-menu.html
