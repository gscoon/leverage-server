doctype html
html(lang="en")
	head
		script(src="https://cdn.socket.io/socket.io-1.4.5.js")
		script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js")
		link(rel="stylesheet", href="/css/style.css")
		link(rel="icon", type="image/png", href="/images/favicons/spot-32.png")
		script.
			// called when facebook api is loaded
			function fbStart(){
				var forceLogin = getQueryVariable('force');
				if(forceLogin == 'true')
					doLogin();
				$('#force_login_menu, #general_overlay').fadeIn(400);
				$('#force_login_button').on('click', doLogin);
			}

			function doLogin(){
				window.location.href = "http://login.chickenpox.io/facebook";
				//- FB.login(function(response){
				//- 	console.log(response);
				//- 	// Logged into your app and Facebook.
				//- 	if (response.status === 'connected')
				//- 		window.location.href = "http://login.chickenpox.io/facebook";
				//- });
			}

			function getQueryVariable(variable){
				var query = window.location.search.substring(1);
				var vars = query.split("&");
				for (var i=0;i<vars.length;i++) {
					var pair = vars[i].split("=");
					if(pair[0] == variable){return pair[1];}
				}
				return(false);
			}

		title Chicken Pox - Login
		body
		include fb-sdk
		include login_menu_inc.jade
