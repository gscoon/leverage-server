div#tag_menu
    div#tag_menu_notification_saved
        span Saved
    div#tag_menu_nav
        a#tmn_add_message.tag_menu_title Add a Message
        a#tmn_share Who Can See It
        a#tmn_more More details
        //a#tmn_revisit Revisit
    // 1. Tag Content
    div#tag_menu_content
        
        //div.custom_select
            div.active_item
                span.active_item_text Custom message:
                span.selection_toggle_arrows
            div.custom_select_list
                div.custom_select_section_label Custom Message:
                a.custom_select_item Write your own text
                    span.custom_select_val {"type":"action", "val":"showCustomMessage"}
                div.custom_select_section_label Or choose from these:
                a.custom_select_item What do you think about this?
                    span.custom_select_val {"type":"text", "val":"What do you think about this?"}
                a.custom_select_item Look into this.
                    span.custom_select_val {"type":"text", "val":"Look into this."}
                a.custom_select_item How cool is this?
                    span.custom_select_val {"type":"text", "val":"How cool is this?"}
                a.custom_select_item This is what I was talking about.
                    span.custom_select_val {"type":"text", "val":"This is what I was talking about."}
                a.custom_select_item What's going on here?
                    span.custom_select_val {"type":"text", "val":"What's going on here?"}
                a.custom_select_item This is great.
                    span.custom_select_val {"type":"text", "val":"This is great."}
                a.custom_select_item This is terrible.
                    span.custom_select_val {"type":"text", "val":"This is terrible."}
        input#lev_comment_input(type="text")
        textarea#lev_comment_textarea
        div#lev_comment_preset
        
        // buttons
        div.button_row
            //a#tag_share_button() Share Tag
                span.next_arrow.button_arrow
            
            a#tag_save_message_button Save Message
                span.plus_icon
            //a.tag_hide_button Hide
            
    // 2. Who
    div#tag_menu_who
        //div.tag_specify_row_label Who can see your tag?
        div.tag_specify_row
            div.custom_radio
                a.custom_radio_option.custom_radio_option_active Specify
                a.custom_radio_option Anyone with a link
        div.tag_specify_row
            // div.tag_specify_row_label People and Groups
            input#people_search_input
            //- div.tag_specify_row_label Recent
            //- div#tag_recent_container    
        // buttons
        div.button_row
            //a#tag_back_button.button_grey() Back
                span.back_arrow.button_arrow
            a#tag_save_preview() Save People
                span.plus_icon
            a.button_grey Keep it Private
                span.lock_icon
    
    // 3. Tag Preview
    div#tag_menu_preview
        div.tag_menu_title Preview Content
        div#tag_menu_preview_container
            div.tag_item_top
                img.tag_item_user_img
                div.tag_item_user_name
                div.tag_item_details
                    span.tag_item_timestamp 15 minutes ago
                    span.tag_item_comment_count 0 Comments
                    span.tag_item_point_count 0 Points
            div.tag_item_thoughts
            div.tag_item_snippit
                div.tag_item_snippit_text
                canvas.tag_item_snippit_img
                a.tag_item_snippit_link
                
        div.button_row
            a#preview_back_button.button_grey() Back
                span.back_arrow.button_arrow
            a#tag_finish_button() Finish
                span.button_check
    
    div#tag_menu_load_page
        div#tm_loader
        div#tm_loader_message
    // close button
    a#x.x
